{
	"name": {
		"en": "Volkswagen"
	},
	"class": "car",
	"capabilities": ["measure_battery", "ev_charging_state", "locked"],
	"energy": {
		"electricCar": true
	},
	"platforms": ["local"],
	"connectivity": [],
	"images": {
		"small": "{{driverAssetsPath}}/images/small.png",
		"large": "{{driverAssetsPath}}/images/large.png",
		"xlarge": "{{driverAssetsPath}}/images/xlarge.png"
	},
	"pair": [
		{
			"id": "login_credentials",
			"template": "login_credentials",
			"options": {
				"logo": "logo.png",
				"title": {
					"en": "Volkswagen ID",
					"nl": "Volkswagen ID"
				},
				"usernameLabel": { "en": "E-mail", "nl": "E-mailadres" },
				"usernamePlaceholder": { "en": "john@doe.com", "nl": "jan@smit.com" },
				"passwordLabel": { "en": "Password", "nl": "Wachtwoord" },
				"passwordPlaceholder": { "en": "Password", "nl": "Wachtwoord" }
			}
		},
		{
			"id": "pincode",
			"template": "pincode",
			"options": {
				"title": { "en": "Enter your S-PIN", "nl": "Voer je S-PIN in" },
				"hint": {
					"en": "This is required to modify vehicle settings.",
					"nl": "Dit is vereist om voertuiginstellingen te wijzigen."
				},
				"type": "number",
				"length": 4
			}
		},
		{
			"id": "list_devices",
			"template": "list_devices",
			"navigation": { "next": "add_devices" }
		},
		{
			"id": "add_devices",
			"template": "add_devices"
		}
	]
}
