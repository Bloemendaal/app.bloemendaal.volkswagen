{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			".homeychangelog.json",
			".homeycompose/**/*.json",
			".vscode/**/*.json",
			"app.mts",
			"biome.json",
			"env.json",
			"drivers/**/*.mts",
			"drivers/**/*.json",
			"lib/**/*.mts",
			"lib/**/*.json",
			"locales/**/*.json",
			"package.json",
			"tsconfig.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
