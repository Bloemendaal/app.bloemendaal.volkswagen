{
	"_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
	"id": "todo.bloemendaal.volkswagen",
	"version": "1.0.0",
	"compatibility": ">=12.4.5",
	"sdk": 3,
	"platforms": ["local"],
	"name": {
		"en": "Volkswagen"
	},
	"description": {
		"en": "Adds support for Volkswagen cars in Europe"
	},
	"category": ["localization"],
	"permissions": [],
	"images": {
		"small": "/assets/images/small.png",
		"large": "/assets/images/large.png",
		"xlarge": "/assets/images/xlarge.png"
	},
	"author": {
		"name": "Casper Bloemendaal",
		"email": "casperbloemendaal@gmail.com"
	},
	"esm": true,
	"drivers": [
		{
			"name": {
				"en": "Volkswagen"
			},
			"class": "car",
			"capabilities": ["measure_battery", "ev_charging_state", "locked"],
			"energy": {
				"electricCar": true
			},
			"platforms": ["local"],
			"connectivity": [],
			"images": {
				"small": "/drivers/volkswagen/assets/images/small.png",
				"large": "/drivers/volkswagen/assets/images/large.png",
				"xlarge": "/drivers/volkswagen/assets/images/xlarge.png"
			},
			"pair": [
				{
					"id": "login_credentials",
					"template": "login_credentials",
					"options": {
						"logo": "logo.png",
						"title": {
							"en": "Volkswagen ID",
							"nl": "Volkswagen ID"
						},
						"usernameLabel": {
							"en": "E-mail",
							"nl": "E-mailadres"
						},
						"usernamePlaceholder": {
							"en": "john@doe.com",
							"nl": "jan@smit.com"
						},
						"passwordLabel": {
							"en": "Password",
							"nl": "Wachtwoord"
						},
						"passwordPlaceholder": {
							"en": "Password",
							"nl": "Wachtwoord"
						}
					}
				},
				{
					"id": "pincode",
					"template": "pincode",
					"options": {
						"title": {
							"en": "Enter your S-PIN",
							"nl": "Voer je S-PIN in"
						},
						"hint": {
							"en": "This is required to modify vehicle settings.",
							"nl": "Dit is vereist om voertuiginstellingen te wijzigen."
						},
						"type": "number",
						"length": 4
					}
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			],
			"id": "volkswagen",
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Login details",
						"nl": "Inloggegevens"
					},
					"children": [
						{
							"id": "email",
							"type": "text",
							"label": {
								"en": "E-mail",
								"nl": "E-mailadres"
							},
							"value": "",
							"hint": {
								"en": "The e-mail that you use in the Volkswagen App.",
								"nl": "Het e-mailadres dat je gebruikt in de Volkswagen App."
							}
						},
						{
							"id": "password",
							"type": "password",
							"label": {
								"en": "Password",
								"nl": "Wachtwoord"
							},
							"value": "",
							"hint": {
								"en": "The password that you use in the Volkswagen App.",
								"nl": "Het wachtwoord dat je gebruikt in de Volkswagen App."
							}
						},
						{
							"id": "sPin",
							"type": "password",
							"label": {
								"en": "S-PIN",
								"nl": "S-PIN"
							},
							"value": "",
							"pattern": "^[0-9]{4}$",
							"hint": {
								"en": "Required to modify vehicle settings.",
								"nl": "Vereist om voertuiginstellingen te wijzigen."
							}
						}
					]
				},
				{
					"type": "group",
					"label": {
						"en": "Behavior settings",
						"nl": "Gedragsinstellingen"
					},
					"children": [
						{
							"id": "pollingInterval",
							"type": "number",
							"label": {
								"en": "Polling interval",
								"nl": "Ververstijd"
							},
							"value": 10,
							"min": 1,
							"step": 1,
							"units": {
								"en": "minutes",
								"nl": "minuten"
							},
							"hint": {
								"en": "Interval in minutes to poll the vehicle for new data. Lowering this value may result in battery drain.",
								"nl": "Interval in minuten om bijgewerkte gegevens op te halen. Het verlagen van deze waarde kan resulteren in hoger batterijgebruik."
							}
						}
					]
				}
			]
		}
	]
}
